<%- include('header') %>

<!-- Website Embedder Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-5 fw-bold mb-3">Website Embedder</h1>
                <p class="lead text-muted mb-4">
                    Embed any website with our advanced proxy technology. No more iframe limitations!
                </p>
            </div>
        </div>
    </div>
</section>

<!-- URL Input Section -->
<section class="py-4 bg-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">
                                        <i class="fas fa-globe text-primary"></i>
                                    </span>
                                    <input type="url" 
                                           class="form-control" 
                                           id="urlInput" 
                                           placeholder="Enter any website URL (e.g., https://example.com, https://github.com)"
                                           value="">
                                </div>
                                <div class="form-text mt-2">
                                    <i class="fas fa-magic text-success me-1"></i>
                                    <strong>No iframe limitations!</strong> Our proxy technology can embed most websites successfully.
                                </div>
                            </div>
                            <div class="col-md-4 mt-3 mt-md-0">
                                <button class="btn btn-primary btn-lg w-100" id="loadWebsite">
                                    <i class="fas fa-rocket me-2"></i>Load Website
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Embedded Website Section -->
<section class="py-4">
    <div class="container-fluid px-0">
        <div id="websiteContainer" class="d-none">
            <!-- Website Navigation Controls -->
            <div class="bg-dark text-white py-2 px-3">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <div class="btn-group" role="group">
                            <button class="btn btn-outline-light btn-sm" id="goBack" disabled>
                                <i class="fas fa-arrow-left"></i>
                            </button>
                            <button class="btn btn-outline-light btn-sm" id="goForward" disabled>
                                <i class="fas fa-arrow-right"></i>
                            </button>
                            <button class="btn btn-outline-light btn-sm" id="refreshPage">
                                <i class="fas fa-sync-alt"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">
                                <i class="fas fa-link"></i>
                            </span>
                            <input type="text" class="form-control" id="currentUrl" readonly>
                            <button class="btn btn-outline-light" type="button" id="openInNewTab">
                                <i class="fas fa-external-link-alt"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-outline-danger btn-sm" id="closeEmbedded">
                            <i class="fas fa-times"></i> Close
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Loading Indicator -->
            <div id="loadingIndicator" class="text-center py-5 bg-light">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3 text-muted">Loading website through proxy...</p>
            </div>
            
            <!-- Error Message -->
            <div id="errorMessage" class="alert alert-warning m-3 d-none" role="alert">
                <div class="d-flex align-items-start">
                    <i class="fas fa-exclamation-triangle me-2 mt-1 text-warning"></i>
                    <div class="flex-grow-1">
                        <strong>Unable to load website:</strong>
                        <span id="errorText"></span>
                        <div class="mt-2">
                            <small class="text-muted">
                                <strong>Possible reasons:</strong>
                                <ul class="mb-2">
                                    <li><strong>Network issues:</strong> Website may be temporarily unavailable</li>
                                    <li><strong>HTTPS/SSL errors:</strong> Certificate or security issues</li>
                                    <li><strong>Blocked content:</strong> Website may block proxy requests</li>
                                    <li><strong>Timeout:</strong> Website took too long to respond</li>
                                </ul>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Website Content -->
            <div id="websiteContent" class="position-relative" style="min-height: 80vh;">
                <!-- Content will be loaded here -->
            </div>
        </div>
        
        <!-- Quick Links Section -->
        <div id="quickLinksSection" class="container mt-4">
            <div class="row">
                <div class="col-12">
                    <h5 class="text-center mb-3">ðŸš€ Try These Popular Sites</h5>
                    <div class="d-flex flex-wrap justify-content-center gap-2 mb-3">
                        <button class="btn btn-outline-primary btn-sm quick-link" data-url="https://example.com">
                            <i class="fas fa-globe me-1"></i>Example.com
                        </button>
                        <button class="btn btn-outline-info btn-sm quick-link" data-url="https://httpbin.org/html">
                            <i class="fas fa-code me-1"></i>HTTPBin HTML
                        </button>
                        <button class="btn btn-outline-success btn-sm quick-link" data-url="https://postman-echo.com">
                            <i class="fas fa-server me-1"></i>Postman Echo
                        </button>
                        <button class="btn btn-outline-warning btn-sm quick-link" data-url="https://github.com">
                            <i class="fab fa-github me-1"></i>GitHub
                        </button>
                        <button class="btn btn-outline-danger btn-sm quick-link" data-url="https://news.ycombinator.com">
                            <i class="fas fa-newspaper me-1"></i>Hacker News
                        </button>
                    </div>
                    
                    <div class="alert alert-success py-2 px-3 mb-3">
                        <div class="row">
                            <div class="col-md-8">
                                <i class="fas fa-check-circle me-1"></i>
                                <strong>Enhanced Embedding:</strong> Our proxy technology bypasses iframe limitations and can successfully embed most websites!
                            </div>
                            <div class="col-md-4 text-md-end">
                                <small class="text-muted">
                                    <i class="fas fa-shield-alt me-1"></i>Secure & reliable
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <details class="mb-3">
                        <summary class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-info-circle me-1"></i>How Does This Work?
                        </summary>
                        <div class="mt-2 p-3 bg-light rounded">
                            <h6>Proxy-Based Embedding:</h6>
                            <ul class="small">
                                <li><strong>Server-side fetching:</strong> We fetch the website content on our server</li>
                                <li><strong>URL rewriting:</strong> All links and resources are properly modified</li>
                                <li><strong>Security filtering:</strong> Potentially harmful scripts are filtered out</li>
                                <li><strong>No iframe restrictions:</strong> Bypasses X-Frame-Options and CSP limitations</li>
                            </ul>
                            <h6>Advantages over iframes:</h6>
                            <ul class="small text-success">
                                <li>Works with sites that block iframe embedding</li>
                                <li>Better control over content display</li>
                                <li>Improved security through content filtering</li>
                                <li>Better mobile responsiveness</li>
                            </ul>
                            <p class="small text-muted mb-0">
                                <strong>Note:</strong> Some dynamic functionality may be limited due to security filtering, but basic website content and navigation work perfectly.
                            </p>
                        </div>
                    </details>
                </div>
            </div>
        </div>
    </div>
</section>

