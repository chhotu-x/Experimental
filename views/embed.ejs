<%- include('layout', { body: `
<!-- Website Embedder Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-5 fw-bold mb-3">Website Embedder</h1>
                <p class="lead text-muted mb-4">
                    Embed any website with full navigation capabilities. Simply enter a URL and explore the site within our interface.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- URL Input Section -->
<section class="py-4 bg-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">
                                        <i class="fas fa-globe text-primary"></i>
                                    </span>
                                    <input type="url" 
                                           class="form-control" 
                                           id="urlInput" 
                                           placeholder="Enter website URL (e.g., https://jsonplaceholder.typicode.com)"
                                           value="">
                                </div>
                                <div class="form-text mt-2">
                                    <i class="fas fa-info-circle text-info me-1"></i>
                                    Enter a complete URL - Not all sites allow embedding (try the suggestions below)
                                </div>
                            </div>
                            <div class="col-md-4 mt-3 mt-md-0">
                                <button class="btn btn-primary btn-lg w-100" id="loadWebsite">
                                    <i class="fas fa-arrow-right me-2"></i>Load Website
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Embedded Website Section -->
<section class="py-4">
    <div class="container-fluid px-0">
        <div id="websiteContainer" class="d-none">
            <!-- Website Navigation Controls -->
            <div class="bg-dark text-white py-2 px-3">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <div class="btn-group" role="group">
                            <button class="btn btn-outline-light btn-sm" id="goBack" disabled>
                                <i class="fas fa-arrow-left"></i>
                            </button>
                            <button class="btn btn-outline-light btn-sm" id="goForward" disabled>
                                <i class="fas fa-arrow-right"></i>
                            </button>
                            <button class="btn btn-outline-light btn-sm" id="refreshPage">
                                <i class="fas fa-sync-alt"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">
                                <i class="fas fa-link"></i>
                            </span>
                            <input type="text" class="form-control" id="currentUrl" readonly>
                            <button class="btn btn-outline-light" type="button" id="openInNewTab">
                                <i class="fas fa-external-link-alt"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-outline-danger btn-sm" id="closeEmbedded">
                            <i class="fas fa-times"></i> Close
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Loading Indicator -->
            <div id="loadingIndicator" class="text-center py-5 bg-light">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3 text-muted">Loading website...</p>
            </div>
            
            <!-- Error Message -->
            <div id="errorMessage" class="alert alert-warning m-3 d-none" role="alert">
                <div class="d-flex align-items-start">
                    <i class="fas fa-exclamation-triangle me-2 mt-1 text-warning"></i>
                    <div class="flex-grow-1">
                        <strong>Unable to load website:</strong>
                        <span id="errorText"></span>
                        <div class="mt-2">
                            <small class="text-muted">
                                <strong>Common reasons:</strong>
                                <ul class="mb-2">
                                    <li><strong>X-Frame-Options header:</strong> Website explicitly blocks iframe embedding</li>
                                    <li><strong>Content Security Policy:</strong> Site's security settings prevent embedding</li>
                                    <li><strong>HTTPS requirements:</strong> Mixed content restrictions</li>
                                    <li><strong>Geo-blocking:</strong> Site may be restricted in your region</li>
                                </ul>
                                <div id="errorSuggestions" style="display: none;" class="alert alert-info py-2 mt-2">
                                    <i class="fas fa-lightbulb me-1"></i>
                                    <span></span>
                                </div>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Website Frame -->
            <div id="iframeContainer" class="position-relative">
                <iframe id="websiteFrame" 
                        width="100%" 
                        height="800px" 
                        frameborder="0" 
                        sandbox="allow-same-origin allow-scripts allow-popups allow-forms allow-top-navigation"
                        style="min-height: 80vh;">
                </iframe>
            </div>
        </div>
        
        <!-- Quick Links Section -->
        <div id="quickLinksSection" class="container mt-4">
            <div class="row">
                <div class="col-12">
                    <h5 class="text-center mb-3">ðŸš€ Try These Embed-Friendly Sites</h5>
                    <div class="d-flex flex-wrap justify-content-center gap-2 mb-3">
                        <button class="btn btn-success btn-sm quick-link" data-url="/demo-page.html">
                            <i class="fas fa-check-circle me-1"></i>Demo Page (Always Works)
                        </button>
                        <button class="btn btn-outline-info btn-sm quick-link" data-url="https://httpbin.org/html">
                            <i class="fas fa-code me-1"></i>HTTPBin HTML
                        </button>
                        <button class="btn btn-outline-primary btn-sm quick-link" data-url="https://postman-echo.com">
                            <i class="fas fa-server me-1"></i>Postman Echo
                        </button>
                        <button class="btn btn-outline-secondary btn-sm quick-link" data-url="data:text/html,<h1>Hello%20World</h1><p>This%20is%20a%20data%20URL%20that%20should%20work!</p>">
                            <i class="fas fa-file-code me-1"></i>Data URL Demo
                        </button>
                    </div>
                    
                    <div class="alert alert-info py-2 px-3 mb-3">
                        <div class="row">
                            <div class="col-md-8">
                                <i class="fas fa-info-circle me-1"></i>
                                <strong>Embedding Reality:</strong> Most modern websites (Google, Facebook, YouTube, banks, social media) block iframe embedding for security. The green "Demo Page" above always works - try it first!
                            </div>
                            <div class="col-md-4 text-md-end">
                                <small class="text-muted">
                                    <i class="fas fa-shield-alt me-1"></i>This is standard web security
                                </small>
                            </div>
                        </div>
                    </div>
                    
                    <details class="mb-3">
                        <summary class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-question-circle me-1"></i>Why Can't I Embed Some Sites?
                        </summary>
                        <div class="mt-2 p-3 bg-light rounded">
                            <h6>Common Blocking Methods:</h6>
                            <ul class="small">
                                <li><strong>X-Frame-Options:</strong> HTTP header that prevents page from being displayed in iframe</li>
                                <li><strong>Content Security Policy (CSP):</strong> Modern security standard that controls resource loading</li>
                                <li><strong>JavaScript Frame Busting:</strong> Code that detects iframe embedding and redirects</li>
                                <li><strong>HTTPS Mixed Content:</strong> Secure sites can't embed insecure content</li>
                            </ul>
                            <h6>Sites That Typically Allow Embedding:</h6>
                            <ul class="small text-success">
                                <li>API documentation sites (JSON Placeholder, HTTPBin)</li>
                                <li>Developer tools and testing services</li>
                                <li>Some news and blog sites</li>
                                <li>Educational content platforms</li>
                                <li>Simple static websites</li>
                            </ul>
                            <p class="small text-muted mb-0">
                                <strong>Pro Tip:</strong> If you need to embed blocked content, consider using the "Open in New Tab" button or implementing server-side proxying (advanced).
                            </p>
                        </div>
                    </details>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-12 mb-4">
                <h3>Embedding Features</h3>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-mouse-pointer fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Full Navigation</h5>
                        <p class="card-text text-muted">
                            Click links, navigate pages, and interact with websites naturally.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Secure Sandboxing</h5>
                        <p class="card-text text-muted">
                            Websites are loaded in a secure sandbox environment for safety.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-mobile-alt fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Responsive</h5>
                        <p class="card-text text-muted">
                            Embedded websites adapt to different screen sizes and devices.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
` }) %>