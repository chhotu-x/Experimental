<%- include('layout', { body: `
<!-- Website Embedder Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-5 fw-bold mb-3">Website Embedder</h1>
                <p class="lead text-muted mb-4">
                    Embed any website with full navigation capabilities. Simply enter a URL and explore the site within our interface.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- URL Input Section -->
<section class="py-4 bg-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card shadow-sm border-0">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">
                                        <i class="fas fa-globe text-primary"></i>
                                    </span>
                                    <input type="url" 
                                           class="form-control" 
                                           id="urlInput" 
                                           placeholder="Enter website URL (e.g., https://example.com)"
                                           value="">
                                </div>
                                <div class="form-text mt-2">
                                    <i class="fas fa-info-circle text-info me-1"></i>
                                    Enter a complete URL including http:// or https://
                                </div>
                            </div>
                            <div class="col-md-4 mt-3 mt-md-0">
                                <button class="btn btn-primary btn-lg w-100" id="loadWebsite">
                                    <i class="fas fa-arrow-right me-2"></i>Load Website
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Embedded Website Section -->
<section class="py-4">
    <div class="container-fluid px-0">
        <div id="websiteContainer" class="d-none">
            <!-- Website Navigation Controls -->
            <div class="bg-dark text-white py-2 px-3">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <div class="btn-group" role="group">
                            <button class="btn btn-outline-light btn-sm" id="goBack" disabled>
                                <i class="fas fa-arrow-left"></i>
                            </button>
                            <button class="btn btn-outline-light btn-sm" id="goForward" disabled>
                                <i class="fas fa-arrow-right"></i>
                            </button>
                            <button class="btn btn-outline-light btn-sm" id="refreshPage">
                                <i class="fas fa-sync-alt"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">
                                <i class="fas fa-link"></i>
                            </span>
                            <input type="text" class="form-control" id="currentUrl" readonly>
                            <button class="btn btn-outline-light" type="button" id="openInNewTab">
                                <i class="fas fa-external-link-alt"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-outline-danger btn-sm" id="closeEmbedded">
                            <i class="fas fa-times"></i> Close
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Loading Indicator -->
            <div id="loadingIndicator" class="text-center py-5 bg-light">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3 text-muted">Loading website...</p>
            </div>
            
            <!-- Error Message -->
            <div id="errorMessage" class="alert alert-danger m-3 d-none" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Unable to load website:</strong>
                <span id="errorText"></span>
                <div class="mt-2">
                    <small>
                        This could be due to:
                        <ul class="mb-0">
                            <li>The website blocking iframe embedding</li>
                            <li>Invalid URL</li>
                            <li>Network connectivity issues</li>
                        </ul>
                    </small>
                </div>
            </div>
            
            <!-- Website Frame -->
            <div id="iframeContainer" class="position-relative">
                <iframe id="websiteFrame" 
                        width="100%" 
                        height="800px" 
                        frameborder="0" 
                        sandbox="allow-same-origin allow-scripts allow-popups allow-forms allow-top-navigation"
                        style="min-height: 80vh;">
                </iframe>
            </div>
        </div>
        
        <!-- Quick Links Section -->
        <div id="quickLinksSection" class="container mt-4">
            <div class="row">
                <div class="col-12">
                    <h5 class="text-center mb-3">Quick Links - Try These Popular Sites</h5>
                    <div class="d-flex flex-wrap justify-content-center gap-2">
                        <button class="btn btn-outline-primary btn-sm quick-link" data-url="https://example.com">
                            Example.com
                        </button>
                        <button class="btn btn-outline-success btn-sm quick-link" data-url="https://httpbin.org">
                            HTTPBin
                        </button>
                        <button class="btn btn-outline-info btn-sm quick-link" data-url="https://jsonplaceholder.typicode.com">
                            JSON Placeholder
                        </button>
                        <button class="btn btn-outline-warning btn-sm quick-link" data-url="https://duckduckgo.com">
                            DuckDuckGo
                        </button>
                    </div>
                    <p class="text-center text-muted mt-2 small">
                        <i class="fas fa-shield-alt me-1"></i>
                        Note: Some websites may not display properly due to security restrictions
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row text-center">
            <div class="col-12 mb-4">
                <h3>Embedding Features</h3>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-mouse-pointer fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Full Navigation</h5>
                        <p class="card-text text-muted">
                            Click links, navigate pages, and interact with websites naturally.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Secure Sandboxing</h5>
                        <p class="card-text text-muted">
                            Websites are loaded in a secure sandbox environment for safety.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-mobile-alt fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Responsive</h5>
                        <p class="card-text text-muted">
                            Embedded websites adapt to different screen sizes and devices.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
` }) %>