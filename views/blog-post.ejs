<%- include('header') %>

<section class="py-5 bg-primary text-white">
  <div class="container">
    <div class="row align-items-center min-vh-50">
      <div class="col-12 text-center">
        <h1 class="display-5 fw-bold mb-2"><%= post.title %></h1>
        <div class="text-white-50">
          <span><i class="far fa-calendar"></i> <%= new Date(post.date).toLocaleDateString() %></span>
          <span class="ms-3"><i class="far fa-user"></i> <%= post.author %></span>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <% if (post.image) { %>
          <img src="<%= post.image %>" alt="<%= post.title %>" class="img-fluid rounded shadow-sm mb-4">
        <% } %>
        <article class="prose">
          <div class="mb-4 text-muted">
            <% if (post.tags && post.tags.length) { %>
              <% post.tags.forEach(function(t){ %>
                <span class="badge bg-light text-dark me-1">#<%= t %></span>
              <% }) %>
            <% } %>
          </div>
          <div><%- post.content %></div>
        </article>
        <div class="mt-4">
          <a href="/blog" class="btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-left me-1"></i> Back to Blog</a>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('footer') %>
