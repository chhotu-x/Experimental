<%- include('header') %>

<!-- Enhanced Website Embedder Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-5 fw-bold mb-3">
                    <i class="fas fa-rocket me-2 text-primary"></i>
                    Advanced Website Embedder
                </h1>
                <p class="lead text-muted mb-4">
                    Embed 1M+ websites with our revolutionary parallel proxy technology. No iframe limitations!
                </p>
                <div class="row g-3 justify-content-center">
                    <div class="col-auto">
                        <span class="badge bg-success fs-6">
                            <i class="fas fa-bolt me-1"></i>1M+ Concurrent
                        </span>
                    </div>
                    <div class="col-auto">
                        <span class="badge bg-info fs-6">
                            <i class="fas fa-sync me-1"></i>Real-time Control
                        </span>
                    </div>
                    <div class="col-auto">
                        <span class="badge bg-warning fs-6">
                            <i class="fas fa-cogs me-1"></i>Grand Automation
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Enhanced Controls Tabs -->
<section class="py-4 bg-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <!-- Tab Navigation -->
                <ul class="nav nav-pills nav-fill mb-4" id="embedTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="single-tab" data-bs-toggle="pill" data-bs-target="#single" type="button" role="tab">
                            <i class="fas fa-globe me-2"></i>Single Website
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="batch-tab" data-bs-toggle="pill" data-bs-target="#batch" type="button" role="tab">
                            <i class="fas fa-layer-group me-2"></i>Batch Embedding
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="automation-tab" data-bs-toggle="pill" data-bs-target="#automation" type="button" role="tab">
                            <i class="fas fa-robot me-2"></i>Grand Automation
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="monitor-tab" data-bs-toggle="pill" data-bs-target="#monitor" type="button" role="tab">
                            <i class="fas fa-chart-line me-2"></i>Live Monitor
                        </button>
                    </li>
                </ul>

                <!-- Tab Content -->
                <div class="tab-content" id="embedTabsContent">
                    
                    <!-- Single Website Tab -->
                    <div class="tab-pane fade show active" id="single" role="tabpanel">
                        <div class="card shadow-sm border-0">
                            <div class="card-body p-4">
                                <div class="row align-items-center">
                                    <div class="col-md-8">
                                        <div class="input-group input-group-lg">
                                            <span class="input-group-text">
                                                <i class="fas fa-globe text-primary"></i>
                                            </span>
                                            <input type="url" 
                                                   class="form-control" 
                                                   id="urlInput" 
                                                   placeholder="Enter any website URL (e.g., https://example.com)"
                                                   value="">
                                        </div>
                                    </div>
                                    <div class="col-md-4 mt-3 mt-md-0">
                                        <button class="btn btn-primary btn-lg w-100" id="loadWebsite">
                                            <i class="fas fa-rocket me-2"></i>Load Website
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Batch Embedding Tab -->
                    <div class="tab-pane fade" id="batch" role="tabpanel">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-gradient" style="background: linear-gradient(45deg, #007bff, #0056b3);">
                                <h5 class="text-white mb-0">
                                    <i class="fas fa-layer-group me-2"></i>Batch Embedding Control
                                </h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="row">
                                    <div class="col-md-8">
                                        <label for="batchUrls" class="form-label fw-bold">Website URLs (one per line)</label>
                                        <textarea class="form-control" id="batchUrls" rows="6" 
                                                  placeholder="https://example.com&#10;https://github.com&#10;https://google.com&#10;https://stackoverflow.com&#10;..."></textarea>
                                        <div class="form-text">
                                            <i class="fas fa-info-circle text-info me-1"></i>
                                            Enter up to 10,000 URLs for parallel processing
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label fw-bold">Batch Options</label>
                                        <div class="mb-3">
                                            <label for="batchSize" class="form-label">Batch Size</label>
                                            <select class="form-select" id="batchSize">
                                                <option value="10">10 (Testing)</option>
                                                <option value="50">50 (Small)</option>
                                                <option value="100" selected>100 (Medium)</option>
                                                <option value="500">500 (Large)</option>
                                                <option value="1000">1000 (Massive)</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="realTimeProcessing" checked>
                                                <label class="form-check-label" for="realTimeProcessing">
                                                    Real-time Processing
                                                </label>
                                            </div>
                                        </div>
                                        <button class="btn btn-success btn-lg w-100" id="startBatchEmbedding">
                                            <i class="fas fa-play me-2"></i>Start Batch
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Grand Automation Tab -->
                    <div class="tab-pane fade" id="automation" role="tabpanel">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-gradient" style="background: linear-gradient(45deg, #28a745, #20c997);">
                                <h5 class="text-white mb-0">
                                    <i class="fas fa-robot me-2"></i>Grand Automation Control - 1M+ Websites
                                </h5>
                            </div>
                            <div class="card-body p-4">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="automationBaseUrl" class="form-label fw-bold">Base Website URL</label>
                                            <input type="url" class="form-control" id="automationBaseUrl" 
                                                   placeholder="https://example.com">
                                        </div>
                                        <div class="mb-3">
                                            <label for="automationCount" class="form-label fw-bold">Number of Instances</label>
                                            <select class="form-select" id="automationCount">
                                                <option value="1000">1,000 (Test)</option>
                                                <option value="10000">10,000 (Small Scale)</option>
                                                <option value="100000">100,000 (Large Scale)</option>
                                                <option value="1000000">1,000,000 (Massive Scale)</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="automationPattern" class="form-label fw-bold">URL Pattern</label>
                                            <select class="form-select" id="automationPattern">
                                                <option value="same">Same URL (1M copies)</option>
                                                <option value="sequential">Sequential IDs (?id=1,2,3...)</option>
                                                <option value="random">Random Parameters</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label fw-bold">Automation Settings</label>
                                            <div class="card bg-light">
                                                <div class="card-body">
                                                    <div class="mb-2">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" id="enableRealTimeControl" checked>
                                                            <label class="form-check-label" for="enableRealTimeControl">
                                                                Real-time Control
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="mb-2">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" id="enableParallelProcessing" checked>
                                                            <label class="form-check-label" for="enableParallelProcessing">
                                                                Parallel Processing
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="mb-2">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" id="enableAutoRecovery" checked>
                                                            <label class="form-check-label" for="enableAutoRecovery">
                                                                Auto Recovery
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <button class="btn btn-warning btn-lg w-100" id="createMassiveAutomation">
                                            <i class="fas fa-magic me-2"></i>Create 1M+ Automation
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Live Monitor Tab -->
                    <div class="tab-pane fade" id="monitor" role="tabpanel">
                        <div class="row g-4">
                            <div class="col-md-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3 class="text-primary" id="activeSessions">0</h3>
                                        <small class="text-muted">Active Sessions</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3 class="text-success" id="completedTotal">0</h3>
                                        <small class="text-muted">Completed</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3 class="text-info" id="throughputRate">0/s</h3>
                                        <small class="text-muted">Throughput</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3 class="text-warning" id="successRate">0%</h3>
                                        <small class="text-muted">Success Rate</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card mt-4">
                            <div class="card-header">
                                <h5 class="mb-0">
                                    <i class="fas fa-chart-line me-2"></i>Real-time Performance Monitor
                                </h5>
                            </div>
                            <div class="card-body">
                                <div id="performanceLog" class="bg-dark text-light p-3 rounded" style="height: 300px; overflow-y: auto; font-family: monospace; font-size: 12px;">
                                    <div class="text-success">🚀 Performance monitor initialized...</div>
                                    <div class="text-info">⚡ Ready for 1M+ concurrent operations</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Results Section (same as before but enhanced) -->
<section class="py-4">
    <div class="container-fluid px-0">
        <div id="websiteContainer" class="d-none">
            <!-- Website Navigation Controls -->
            <div class="bg-dark text-white py-2 px-3">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <div class="btn-group" role="group">
                            <button class="btn btn-outline-light btn-sm" id="goBack" disabled>
                                <i class="fas fa-arrow-left"></i>
                            </button>
                            <button class="btn btn-outline-light btn-sm" id="goForward" disabled>
                                <i class="fas fa-arrow-right"></i>
                            </button>
                            <button class="btn btn-outline-light btn-sm" id="refreshPage">
                                <i class="fas fa-sync-alt"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">
                                <i class="fas fa-link"></i>
                            </span>
                            <input type="text" class="form-control" id="currentUrl" readonly>
                            <button class="btn btn-outline-light" type="button" id="openInNewTab">
                                <i class="fas fa-external-link-alt"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-auto">
                        <span class="badge bg-success me-2" id="embeddingStatus">
                            <i class="fas fa-check me-1"></i>Parallel Mode
                        </span>
                        <button class="btn btn-outline-danger btn-sm" id="closeEmbedded">
                            <i class="fas fa-times"></i> Close
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Loading Indicator -->
            <div id="loadingIndicator" class="text-center py-5 bg-light">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3 text-muted">Processing through parallel proxy system...</p>
                <div id="loadingProgress" class="progress mt-2 mx-auto" style="width: 300px;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                </div>
            </div>
            
            <!-- Error Message -->
            <div id="errorMessage" class="alert alert-warning m-3 d-none" role="alert">
                <div class="d-flex align-items-start">
                    <i class="fas fa-exclamation-triangle me-2 mt-1 text-warning"></i>
                    <div class="flex-grow-1">
                        <strong>Unable to load website:</strong>
                        <span id="errorText"></span>
                    </div>
                </div>
            </div>
            
            <!-- Website Content -->
            <div id="websiteContent" class="position-relative" style="min-height: 80vh;">
                <!-- Content will be loaded here -->
            </div>
        </div>
        
        <!-- Quick Links Section (Enhanced) -->
        <div id="quickLinksSection" class="container mt-4">
            <div class="row">
                <div class="col-12">
                    <h5 class="text-center mb-3">🚀 Try These Demo Examples</h5>
                    <div class="d-flex flex-wrap justify-content-center gap-2 mb-3">
                        <button class="btn btn-outline-primary btn-sm quick-link" data-url="https://example.com">
                            <i class="fas fa-globe me-1"></i>Example.com
                        </button>
                        <button class="btn btn-outline-info btn-sm quick-link" data-url="https://httpbin.org/html">
                            <i class="fas fa-code me-1"></i>HTTPBin
                        </button>
                        <button class="btn btn-outline-success btn-sm quick-link" data-url="https://postman-echo.com">
                            <i class="fas fa-server me-1"></i>Postman Echo
                        </button>
                        <button class="btn btn-outline-warning btn-sm" onclick="loadBatchDemo()">
                            <i class="fas fa-layer-group me-1"></i>Batch Demo
                        </button>
                        <button class="btn btn-outline-danger btn-sm" onclick="loadAutomationDemo()">
                            <i class="fas fa-robot me-1"></i>1M Demo
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

