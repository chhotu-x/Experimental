<!-- Contact Embed Content -->
<div class="row g-3">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-center mb-3">Get in Touch</h5>
                <p class="text-center card-text">
                    Ready to start your next project? We'd love to hear from you!
                </p>
                
                <form action="/contact" method="POST" target="_blank">
                    <div class="row g-2">
                        <div class="col-md-6">
                            <input type="text" class="form-control form-control-sm" name="name" placeholder="Your Name" required>
                        </div>
                        <div class="col-md-6">
                            <input type="email" class="form-control form-control-sm" name="email" placeholder="Your Email" required>
                        </div>
                        <div class="col-12">
                            <textarea class="form-control form-control-sm" name="message" rows="3" placeholder="Tell us about your project..." required></textarea>
                        </div>
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-primary btn-sm">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mt-2">
    <div class="col-md-4 text-center">
        <div class="mb-2">
            <i class="fas fa-envelope fa-2x text-primary"></i>
        </div>
        <h6>Email</h6>
        <a href="mailto:hello@42web.io" class="small text-decoration-none">hello@42web.io</a>
    </div>
    
    <div class="col-md-4 text-center">
        <div class="mb-2">
            <i class="fas fa-phone fa-2x text-success"></i>
        </div>
        <h6>Phone</h6>
        <a href="tel:+15551234567" class="small text-decoration-none">+1 (555) 123-4567</a>
    </div>
    
    <div class="col-md-4 text-center">
        <div class="mb-2">
            <i class="fas fa-clock fa-2x text-warning"></i>
        </div>
        <h6>Response Time</h6>
        <small class="text-muted">Within 24 hours</small>
    </div>
</div>

